<%- include('partials/header'); -%>

    <h1>Compose</h1>

    <form action="/compose" method="post">

        <div class="mb-3">
            <label for="postTitle">Title</label><br>
            <input type="text" name="postTitle" class="postTitle form-control" autocomplete="off">
        </div>

        <br>

        <div class="mb-3">
            <label for="postInfo">Post</label><br>
            <textarea class="form-control" name="postInfo"></textarea>
        </div>

        <br>
        <button type="submit" class="btn btn-primary">Publish</button>

    </form>

    <%- include('partials/footer'); -%>